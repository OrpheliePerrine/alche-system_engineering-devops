#!/usr/bin/env bash
# This script installs Nginx on a Ubuntu server and configures the root page

# Update package index
apt-get update -y

# Install Nginx if not already installed
apt-get install -y nginx

# Write the required content to the root page
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure Nginx is started and running
service nginx start

# Restart Nginx to apply the new index page
service nginx restart
