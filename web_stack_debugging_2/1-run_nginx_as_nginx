#!/usr/bin/env bash
# Configures Nginx to run as nginx user on port 8080

# Update packages and install Nginx if missing
apt-get update
apt-get install -y nginx

# Ensure nginx user exists
id -u nginx &>/dev/null || useradd -r -s /sbin/nologin nginx

# Backup default nginx.conf
cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak

# Configure Nginx: run as nginx user and listen on port 8080
sed -i 's/^user .*;/user nginx;/' /etc/nginx/nginx.conf
sed -i 's/listen 80;/listen 8080;/' /etc/nginx/sites-available/default

# Ensure required directories exist
mkdir -p /var/run/nginx /var/log/nginx

# Start Nginx
nginx
